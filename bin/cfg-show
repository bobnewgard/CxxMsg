START=${1:-cfg/}
LEN=$(echo cfg | wc -c)
OFF='\033[0m'
ORN='\033[0;33m'
CYN='\033[0;36m'

if [ "${START:0:${LEN}}" != "cfg/" ] ; then
    echo "[ERR] bad start path: \"${START}\""
    exit 1
fi

for OBJ in $(find $START -not -path '*/\.*' | sort) ; do
    WC=$(echo $OBJ | sed 's|/| |g' | wc -w)
    IN=$((WC + 1))
    IN=$((IN * 4))
    while ((WC > 0)) ; do
        printf "    "
        WC=$((WC - 1))
    done
    if [ -d "$OBJ" ] ; then
        printf "${ORN}%s${OFF}\n" $OBJ
    elif [ -f "$OBJ" ] ; then
        printf "${CYN}%s${OFF}\n" $OBJ
        pr -o $IN -t $OBJ
    fi
done
